<div id="<%= dom_id(post) %>", class="post-container">

<div class="center-text">

  <% if post.files.attached? %>
    <% post.files.each_with_index do |file, index| %>
      <div style="margin-bottom: 20px;">
        <%= image_tag(file, style: "object-fit: cover; width: 200px; height: 300px;", class: "post-image", data: { file_url: url_for(file) }) %>
        <p>ZdjÄ™cie <%= index + 1 %> z <%= post.files.count %></p>
      </div>
    <% end %>
  <% end %>

  <p>
    <%= post.description %>
  </p>

  <p>
    <%= link_to " ", post, class: "post-link" %>
  </p>

  <%= post.created_at.in_time_zone('Europe/Warsaw').strftime("%H:%M, %d-%m-%Y") %>

</div>

</div>


