<nav class="navbar navbar-expand-lg navbar-darklight bg-dark">
  <div>
    <%= link_to "HomePage", root_path, class:"nav-link" %>
    <div>
      <p style="color: green; margin: 0; font-size: 12px;">
        <%= notice %>
      </p>
    </div>
  </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to "All posts", posts_path, class:"nav-link" %>
      </li>
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Create post", new_post_path, class:"nav-link" %>
        </li>
      <% end %>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Dropdown
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" href="#">Action</a>
          <a class="dropdown-item" href="#">Another action</a>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item" href="#">Something else here</a>
        </div>
      </li>
      <li class="nav-item">
        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
      </li>
    </ul>

    <%= form_with(url: search_users_path, method: :get, local: true, class: "d-flex") do %>
      <%= text_field_tag :query, params[:query], class: "form-control me-2", placeholder: "Search Users" %>
      <%= submit_tag "Search", class: "btn btn-outline-success" %>
    <% end %>
    
    </br>

    <% if user_signed_in? %>
      <div class="navbar-button-container">
        <%= button_to "My profile", current_user, class: "navbar-btn btn-primary", method: :get %>
        <%= button_to "Edit account", edit_user_registration_path, class: "navbar-btn btn-primary", method: :get %>
        <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "navbar-btn btn-primary" %>
      </div>
    <% else %>
      <div class="navbar-button-container">
        <%= button_to "Sign in", new_user_session_path, class: "navbar-btn btn-primary" %>
        <%= button_to "Sign up", new_user_registration_path, class: "navbar-btn btn-primary", method: :get %>
      </div>
    <% end %>

  </div>
